@page "/"
@rendermode InteractiveServer
@using WSIST.Engine
<PageTitle>Home</PageTitle>
<div class="top">
    <h1>Your upcoming Tests</h1>

    Welcome to your Overview.
    <button class="btn btn-primary refresh"@onclick="Refresh">
        🔄️
    </button>
</div>

<div>
    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Subject</th>
            <th>Date</th>
            <th>Volume</th>
            <th>Understanding</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var test in tests)
        {
            <tr>
                <td>@test.Title</td>
                <td>@test.Subject</td>
                <td>@test.DueDate.ToShortDateString()</td>
                <td>@Test.VolumeHelper(test.Volume)</td>
                <td>@Test.UnderstandingHelper(test.Understanding)</td>
                <td><button class="btn btn-danger" @onclick="() => DeleteTest(test.Id)">🗑️</button> <button class="btn btn-primary" @bind="temporaryTest" @onclick="() => OpenEditTestModal(test)" >
                    Edit test
                </button></td>
            </tr>
        }
        </tbody>
    </table>
    <button class="btn btn-primary" @onclick="OpenAddTestModal">
        Add test
    </button>

    @if (showModal)
    {
        <div class="modal d-block">
            <div class="modal-content">
                <span class="close text-right" @onclick="CloseModal">X</span>
                <form class="text-center" @onsubmit="ModalSubmit">
                    <label for="testTitle">Test Title</label><br>
                    <input type="text" id="testTitle" name="Title" @bind="@temporaryTest.Title"><br>
                    <select @bind="temporaryTest.Subject">
                        @foreach (var subject in Enum.GetValues<Test.Subjects>())
                        {
                            <option value="@subject">@subject</option>
                        }
                    </select><br/>
                    <label for="TestDueDate">Due Date</label><br>
                    <input type="date" id="TestDueDate" name="dueDate" @bind="@temporaryTest.DueDate"><br/>
                    <label>Volume</label><br>
                    <select @bind="temporaryTest.Volume">
                        @foreach (var testVolume in Enum.GetValues<Test.TestVolume>())
                        {
                            <option value="@testVolume">@Test.VolumeHelper(testVolume)</option>
                        }
                    </select><br/>
                    <label>Personal Understanding</label><br>
                    <select @bind="temporaryTest.Understanding">
                        @foreach (var personalUnderstanding in Enum.GetValues<Test.PersonalUnderstanding>())
                        {
                            <option value="@personalUnderstanding">@Test.UnderstandingHelper(personalUnderstanding)</option>
                        }
                    </select><br/>
                    <label for="testgrade">Grade</label><br>
                    <input type="number" id="testgrade" name="Title" @bind="@temporaryTest.Grade">
                    <p></p>
                    <input type="submit" value="Finish">
                    
                </form>
            </div>
        </div>
    }

</div>
